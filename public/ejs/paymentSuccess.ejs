<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Payment Successful</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          sans-serif;
        background: linear-gradient(135deg, #007dd0 0%, #e9f6ff 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
      }

      .success-container {
        background: #ffffff;
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        position: relative;
        z-index: 1; /* Raised to positive for better stacking */
      }

      .success-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        /* background: linear-gradient(90deg, #007dd0, #007dd0); */
        /* Removed debug border */
      }

      .animation-container {
        width: 120px;
        height: 120px;
        margin: 0 auto 20px;
        position: relative;
        z-index: 0;
      }

      .success-animation {
        width: 100%;
        height: 100%;
        /* Removed negative z-index and debug border */
      }

      /* Updated for full-screen display */
      .congratulation-animation {
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0); /* Start from hidden/small */
        opacity: 0;
        pointer-events: none;
        transition:
          transform 0.8s ease-out,
          opacity 0.8s ease-out;
        z-index: 9999; /* High to be on top of everything */
        animation: confetti 0.5s ease-out forwards;
      }

      h1 {
        color: #1f2937;
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 8px;
        line-height: 1.2;
      }

      .subtitle {
        color: #6b7280;
        font-size: 16px;
        margin-bottom: 30px;
        line-height: 1.5;
      }

      .transaction-details {
        background: #f9fafb;
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 30px;
        text-align: left;
      }

      .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
      }

      .detail-row:last-child {
        margin-bottom: 0;
        padding-top: 12px;
        border-top: 1px solid #e5e7eb;
        font-weight: 600;
      }

      .detail-label {
        color: #6b7280;
        font-size: 14px;
      }

      .detail-value {
        color: #1f2937;
        font-size: 14px;
        font-weight: 500;
      }

      .amount {
        color: #007dd0;
        font-size: 18px;
        font-weight: 700;
      }

      .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
      }

      .btn {
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
      }

      .btn-primary {
        background: #007dd0;
        color: white;
      }

      .btn-primary:hover {
        background: #005f94;
        transform: translateY(-1px);
      }

      .btn-secondary {
        background: #f3f4f6;
        color: #374151;
        border: 1px solid #d1d5db;
      }

      .btn-secondary:hover {
        background: #e5e7eb;
        transform: translateY(-1px);
      }

      .fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      .slide-up {
        animation: slideUp 0.8s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }

        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes confetti {
        from {
          opacity: 0;
          transform: translate(-50%, -50%) scale(0);
        }

        to {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
      }

      /* .show-confetti {
        
      } */

      @media (min-width: 640px) {
        .button-group {
          flex-direction: row;
        }
      }

      .hidden {
        display: none;
      }
    </style>
  </head>

  <body>
    <div class="success-container fade-in">
      <div class="animation-container">
        <div id="success-animation" class="success-animation"></div>
      </div>

      <h1 class="slide-up">Payment Successful!</h1>
      <p class="subtitle slide-up">
        Thank you for your purchase. Your transaction has been completed
        successfully.
      </p>

      <div class="transaction-details slide-up">
        <div class="detail-row">
          <span class="detail-label">Transaction ID</span>
          <span class="detail-value"><%= paymentDetails?.transactionId %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Date</span>
          <span class="detail-value"><%= paymentDetails?.paymentDate %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Payment Method</span>
          <span class="detail-value"
            >•••• •••• •••• <%= paymentDetails?.cardLast4 %></span
          >
        </div>
        <div class="detail-row">
          <span class="detail-label">Amount Paid</span>
          <span class="detail-value amount"><%= paymentDetails?.amount %></span>
        </div>
      </div>
      <div class="button-group slide-up">
        <a href="<%= paymentDetails?.receipt_url %>" class="btn btn-primary">
          <i class="fas fa-receipt"></i> Get Receipt
        </a>
        <a
          href="https://www.techcrafters.tech/"
          class="btn btn-secondary <%= device !== 'website' && 'hidden' %>"
        >
          <i class="fas fa-home"></i> Return Home
        </a>
      </div>
    </div>

    <!-- Moved here for full-screen display -->
    <div id="congratulation-animation" class="congratulation-animation"></div>

    <script>
      // Initialize Lottie animations
      let successAnimation;
      let congratulationAnimation;

      // Load success animation
      successAnimation = lottie.loadAnimation({
        container: document.getElementById('success-animation'),
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/ejs/lottie/success.json',
      });

      // Load congratulation animation
      congratulationAnimation = lottie.loadAnimation({
        container: document.getElementById('congratulation-animation'),
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/ejs/lottie/congratulation.json',
      });
    </script>
  </body>
</html>
